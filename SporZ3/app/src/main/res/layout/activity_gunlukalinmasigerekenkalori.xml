<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sporhareketleri"
    tools:context=".gunlukalinmasigerekenkalori">

    <RadioGroup
        android:id="@+id/radioGroup7"
        android:layout_width="0dp"
        android:layout_height="203dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:background="#B0000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yas"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup6">

        <RadioButton
            android:id="@+id/masabası"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masa Başı Bir işte Çalışıyorum"
            android:textColor="#00FF0A" />

        <RadioButton
            android:id="@+id/hafifhareket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hafif Düzeyde Hareket Ediyorum"
            android:textColor="#00FF0A" />

        <RadioButton
            android:id="@+id/ortadüzey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orta Düzeyde Hareket Ediyorum"
            android:textColor="#00FF0A" />

        <RadioButton
            android:id="@+id/yüksekdüzey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yüksek Düzeyde Hareket Ediyorum"
            android:textColor="#00FF0A" />
    </RadioGroup>

    <ImageView
        android:id="@+id/home"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hesapla"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/hesapla"
        app:layout_constraintTop_toBottomOf="@+id/hesapla"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home" />

    <EditText
        android:id="@+id/kilo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="102dp"
        android:ems="10"
        android:hint="Kilonuzu Giriniz "
        android:background="#B0000000"
        android:textColor="#00FF0A"
        android:inputType="number"
        android:textColorHint="#00FF0A"
        app:layout_constraintBottom_toBottomOf="@+id/boy"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/boy"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="Boyunuzu Giriniz "
        android:background="#B0000000"
        android:textColor="#00FF0A"
        android:inputType="number"
        android:textColorHint="#00FF0A"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/radioGroup7" />

    <EditText
        android:id="@+id/yas"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:background="#B0000000"
        android:hint="Yasınızı Giriniz"
        android:textColor="#00FF0A"
        android:inputType="number"
        android:textColorHint="#00FF0A"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup7"
        app:layout_constraintEnd_toStartOf="@+id/radioGroup7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginBottom="198dp"
        android:text="                   "
        android:textSize="30dp"
        android:textColor="#00FF0A"
        android:background="#B0000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hesapla"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="39dp"
        android:text="Hesapla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonuc" />

    <Button
        android:id="@+id/temizle"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:text="Temizle"
        app:layout_constraintBaseline_toBaselineOf="@+id/hesapla"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup7"
        app:layout_constraintStart_toEndOf="@+id/kilo" />

    <RadioGroup
        android:id="@+id/radioGroup6"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginTop="70dp"
        android:background="#B0000000"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kilo"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/erkek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erkek"
            android:textColor="#00FF0A" />

        <RadioButton
            android:id="@+id/kadın"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kadın"
            android:textColor="#00FF0A" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>